  <h3>Create New Item</h3>
      <form class="form-inline" action="/admin_orders" method="POST">
        <div class="form-group mb-2">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" placeholder="Enter Item's Name" style="width: 300px; margin: 1em">
        </div>
        <div class="form-group mb-2">
          <label for="price">Price</label>
          <input class="form-control" type="text" name="price" placeholder="How much is this?" style="width: 300px; margin: 1em">
        </div>
        <div class="form-group mb-2">
          <label for="desc">Description</label>
          <input class="form-control" type="text" name="desc" placeholder="Explain the Item" style="width: 300px; margin: 1em">
        </div>
        <div class="form-group mb-2">
          <label for="image">New Item Image</label>
          <input class="form-control" type="text" name="image" placeholder="Nice Picture" style="width: 300px; margin: 1em">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>

