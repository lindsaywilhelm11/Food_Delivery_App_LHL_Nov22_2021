<!DOCTYPE html>
<html lang="en">

<head>
  <title>Admin Menu</title>
  
  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <!-- <link rel="stylesheet" href="/styles/main.css" type="text/css" /> -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <header>
    <h3>Food App Name</h3>
    <a href='/'>Home</a>
    <a href='/food_items'>Menu</a>
    <a href='/about'>About</a>
    <a href='/login'>Login</a>
    <a href='/carts'>Place An Order</a>
  </header>
  <div class="header">
    <a class="link" href="admin_orders">Go back to check orders</a>
    <a class="link" href="admin_orders/newitem">Create New Item</a>
  </div>
  <div class="item-wrapper">
    <% for(let item of foodItems) { %>
      <div class="food-item">
        <div class="item-information">
          <h5 class="name"><%= item.name %></h>
          <p class="desc"><%= item.description %></p>
          <p class="price">$<%= item.price %></p>
        </div>
        <img class='item-image' src='<%= item.image %>' height="150px" width="200px"/>
        <form method="post" action="/admin_menu/<%= item.id %>/delete">
          <button type="submit" class="btn btn-outline-danger">Delete</button>
        </form>
      </div>
    <% } %>
  </div>


</body>

</html>
